	<script>
    $(function(){
      $("#includedContent").load("navBar.html");
    });
    </script>

	<style>
        .thumnail-border {
          border-width: 10px;
          border-radius: 80%;
        }
        .smaller-image {
          width: 1px;
        }
  </style>

   <script src="https://kit.fontawesome.com/27517fada0.js"></script>
